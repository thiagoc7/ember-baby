<h5>Timers</h5>

<div class="row">
  <div class="col m3 s6 offset-m3 center-align">
    <a class="btn-floating btn-large waves-effect waves-light {{btnLeft}}" {{action 'start' 'E'}}>E</a>
  </div>
  <div class="col m3 s6 center-align">
    <a class="btn-floating btn-large waves-effect waves-light {{btnRight}}" {{action 'start' 'D'}}>D</a>
  </div>
</div>

<div class="row">
  <div class="col m6 s12 offset-m3">
    <div class="card-panel center-align">
      {{component timerComponent start=newTimerStart lastStart=lastStart}}
    </div>
  </div>
</div>

<div class="row">
  <div class="col m8 s12 offset-m2">
    <div class="card-panel center-align">
      {{timer-table model=model}}
    </div>
  </div>
</div>
